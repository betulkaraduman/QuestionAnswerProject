<section class="page-image page-image-about md-padding">
	<h1 class="text-white text-center">ADMIN</h1>
</section>
<style>
	.btn{
		width: 100px;
		margin:5px;
	}
</style>
<section id="aboutus" class="md-padding">
	<div class="container">
		{{>admin-nav}}
		<div class="clearfix"></div>
		<div class="mb-5"></div>
		{{#if sessionFlash.message}}
		<div class="{{sessionFlash.type}}">{{sessionFlash.message}}</div>
		{{/if}}
		<div class="row">

			<div class="col-md-4">
				<form method="POST" action=""  enctype="multipart/form-data">
					<div class="row">
						<div class="col-md-10">
							<div class="form-group">
								<input class="form-control" name="name" type="text" placeholder="Name Surname*"
									required="required" data-validation-required-message="Please enter Category name.">
								<p class="help-block text-danger"></p>
							</div>
							<div class="form-group">
								<input class="form-control" name="email" type="text" placeholder="Email *"
									required="required" data-validation-required-message="Please enter email.">
								<p class="help-block text-danger"></p>
							</div>
							<div class="form-group">
								<input class="form-control" name="password" type="password" placeholder="Password *"
									required="required" data-validation-required-message="Please enter password.">
								<p class="help-block text-danger text-center">Min length 6 character</p>
							</div>
							<div class="form-group">
								<input class="form-control" name="title" type="text" placeholder="Title *"
									required="required" data-validation-required-message="Please enter title.">
								<p class="help-block text-danger"></p>
							</div>
							<div class="form-group">
								<input class="form-control" name="about" type="text" placeholder="About"
									required="required" data-validation-required-message="Please enter about.">
								<p class="help-block text-danger"></p>
							</div>
							<div class="form-group">
								<input class="form-control" name="place" type="text" placeholder="Place"
									required="required" data-validation-required-message="Please enter place">
								<p class="help-block text-danger"></p>
							</div>
							<div class="form-group">
								<input class="form-control" name="website" type="text" placeholder="Website"
									required="required" data-validation-required-message="Please enter Website name.">
								<p class="help-block text-danger"></p>
							</div>
							<div class="form-group">
								<input class="form-control" type="file" style="line-height:1.2 !important"
									name="profile_image"></input>
								
							</div>
						</div>
						<div class="clearfix"></div>
						<div class="col-lg-10 btn-block">
							<div id="success"></div>
							<button class="btn btn-success btn-block" style="margin-left: auto; width:100%!important" type="submit">Add
								User</button>
						</div>
					</div>

				</form>
			</div>
			<div class="col-md-8">
				<table class="table"  style="text-align: center;">
					<thead>
						<tr>
							<th style="width:25%;">User</th>
							<th>Name Surname</th>
							<th>E-mail</th>
							<th>Process</th>
						</tr>
					</thead>
					<tbody>
						{{#each users}}
						<tr>
							<td><img src="/{{profile_image}}" width="80%"></td>
							<td>{{name}}</td>
							<td>{{email}}</td>
							<td>
								
								<form action="/admin/users/block/{{_id}}?_method=PUT" method="POST">
									<input type="hidden" name="_method" value="PUT">
									<button type="submit" class="btn btn-primary">Block</button>
								</form>
								<a href="/admin/users/edit/{{_id}}" class="btn btn-warning">Update</a>
                              	<form action="/admin/users/delete/{{_id}}?_method=DELETE" method="POST">
									<input type="hidden" name="_method" value="DELETE">
									<button type="submit" class="btn btn-danger">Delete</button>
								</form>

							</td>
						</tr>{{/each}}
					</tbody>
				</table>
			</div>
		</div>

	</div>
</section>