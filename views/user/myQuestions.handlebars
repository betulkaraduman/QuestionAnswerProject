<section class="page-image page-image-about md-padding">

</section>
<section id="aboutus" class="md-padding">
    <div class="container">
        {{>user-nav}}

    </div>
</section>

<section id="contact" class="md-padding">
    <div class="container">

        <div class="row text-center">
            <div class="col-md-4 offset-md-4">
                <div class="section-header">
                    <h2 class="title">My Questions</h2>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                {{#if sessionFlash.message}}
                <div class="{{sessionFlash.type}}">{{sessionFlash.message}}</div>
                {{/if}}
                 <a href="/question/newQuestion/"
                                    style="font-weight: bold;color:#6d6def;padding:10px;border:none">Add New  Question</a>

                <table class="table" style="text-align: center;min-height:400px">
                    <thead>
                        <tr>
                            <th style="width: 5%;"></th>
                            <th style="width: 40%;">Title</th>
                            <th style="width: 60%;">Process</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each questions}}
                        <tr>
                            <td style="text-align:left !important;"><b class="pr-2">{{LikeCount
                                likes}}</b>like</td>
                            <td>{{title}}</td>
                            <td>
                                <a href="/question/edit/{{_id}}" style="font-weight: bold;color:#fd10b4">Update</a>
                                <a href="/question/oneQuestion/{{_id}}"
                                    style="font-weight: bold;color:#6d6def;padding:10px">Detail</a>

                                <a href="/question/addNewAnswer/{{_id}}"
                                    style="font-weight: bold;color:#efa96d;padding:10px">Add New Answer</a>
                                
                                <form action="/question/delete/{{_id}}?_method=DELETE" method="POST"
                                    style="display: inline-block;">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button type="submit" style="font-weight: bold;">Delete</button>
                                </form>
                            </td>

                            {{!-- {{#if (AnswerCheck answers)}}
                            <td><a href="/answer/{{_id}}" style="font-weight: bold;color:#fd10b4">Answers</a> </td>
                            {{else}}
                            <td><a href="/answer/{{_id}}" style="font-weight: bold;color:#fd10b4">Yok ki</a> </td>
                            {{/if}} --}}


                        </tr>{{/each}}
                    </tbody>
                </table>

            </div>
            {{#paginate current=current pages=pages}}
            {{/paginate}}
        </div>

    </div>
</section>