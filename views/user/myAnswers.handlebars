<section class="page-image page-image-about md-padding">

</section>
<section id="aboutus" class="md-padding">
    <div class="container">
        {{>user-nav}}

    </div>
</section>

<section id="contact" class="md-padding">
    <div class="container">

        <div class="row text-center">
            <div class="col-md-4 offset-md-4">
                <div class="section-header">
                    <h2 class="title">My Answers</h2>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                {{#if sessionFlash.message}}
                <div class="{{sessionFlash.type}}">{{sessionFlash.message}}</div>
                {{/if}}
                 <table class="table" style="min-height:400px">
                    <thead>
                        <tr>
                            <th style="width: 5%;"></th>
                            <th style="width: 40%;">Answer</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each answers}}
                        <tr>
                          <td style="text-align:left !important;"><b class="pr-2">{{LikeCount
                                likes}}</b>like</td>
                            <td>{{content}}</td>
                        </tr>{{/each}}
                    </tbody>
                </table>

            </div>
            {{#paginate current=current pages=pages}}
            {{/paginate}}
        </div>

    </div>
</section>